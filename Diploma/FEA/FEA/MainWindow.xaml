<Window x:Class="FEA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Initial Data Page" Height="350" Width="526" Name="wndIniDat" MaxWidth="526" MaxHeight="380" MinWidth="526" MinHeight="380">
    <Grid Name="grdMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="21" />
            <RowDefinition Height="43" />
            <RowDefinition Height="38" />
            <RowDefinition Height="87" />
            <RowDefinition Height="151" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Height="21" HorizontalAlignment="Left" Name="menu1" VerticalAlignment="Top" Width="503">
            <MenuItem Header="Info" TabIndex="-2">
                <MenuItem Header="About program" Click="MenuItem_Click_1" />
                <MenuItem Header="Usage" Click="MenuItem_Click_2" />
                <MenuItem Header="Authors" Click="MenuItem_Click_3" />
            </MenuItem>
            <MenuItem Header="Exit" TabIndex="-1" Click="MenuItem_Click" />
        </Menu>
        <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="grdLayerNum">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="168" />
                <ColumnDefinition Width="168" />
                <ColumnDefinition Width="168" />
            </Grid.ColumnDefinitions>
            <Label Content="#Layers" Height="44" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Center" Width="46" VerticalContentAlignment="Center" Margin="12,0,0,0" />
            <TextBox Height="20" HorizontalAlignment="Left" Margin="59,11,0,0" Name="txtbLayersNumber" VerticalAlignment="Top" Width="66" LostFocus="txtbLayersNumber_LostFocus" TabIndex="0" />
            <Label Content="Mode" Height="44" HorizontalAlignment="Left" Margin="12,0,0,0" Name="label2" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="46" Grid.Column="1" />
            <TextBox Height="20" HorizontalAlignment="Left" Margin="59,11,0,0" Name="txtModeN" VerticalAlignment="Top" Width="66" Grid.Column="1" TabIndex="1" LostFocus="txtModeN_LostFocus" />
            <Label Content="#FE" Height="44" HorizontalAlignment="Left" Margin="12,0,0,0" Name="label3" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="46" Grid.Column="2" />
            <TextBox Height="20" Text="200" HorizontalAlignment="Left" Margin="59,11,0,0" Name="txtbFEN" VerticalAlignment="Top" Width="66" Grid.Column="2" TabIndex="2" LostFocus="txtbFEN_LostFocus" />
        </Grid>
        <StackPanel Grid.Row="4" Height="27" HorizontalAlignment="Left" Margin="0,0" Name="stackPanel1" VerticalAlignment="Top" Width="503" Orientation="Horizontal" Visibility="Visible">
            <RadioButton Content="Dispersion characteristics" Height="17" Name="rdbtnDisp" Width="157" IsChecked="True" Visibility="Visible" Checked="rdbtnDisp_Checked" />
            <RadioButton Content="Critical conditions" Height="17" Name="rdbtnCrit" Width="157" Visibility="Hidden" Checked="rdbtnCrit_Checked" />
        </StackPanel>
        <Grid Grid.Row="4" Height="124" HorizontalAlignment="Left" Margin="0,26,0,0" Name="grid1" VerticalAlignment="Top" Width="504" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="24" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="26" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="151" />
                <ColumnDefinition Width="59" />
                <ColumnDefinition Width="84" />
            </Grid.ColumnDefinitions>
            <Label Content="#of steps of wavenumber" Grid.Row="1" Height="25" HorizontalAlignment="Left" Margin="4,2,0,0" Name="label6" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="146" Visibility="Visible" />
            <Label Content="size of steps of WN" Height="25" HorizontalAlignment="Left" Margin="4,0,0,0" Name="label7" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="146" Grid.Row="3" Visibility="Visible" />
            <Label Content="size of radius step" Grid.RowSpan="2" Height="25" HorizontalAlignment="Left" Margin="0,1,0,24" Name="label8" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="146" Grid.Column="2" Grid.Row="1" Visibility="Hidden" />
            <CheckBox Content="Critical values" Grid.Column="2" Grid.Row="3" Height="15" HorizontalAlignment="Left" Margin="3,5,0,0" Name="chbCritVal" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="145" Visibility="Hidden" TabIndex="9" Checked="chbCritVal_Checked" />
            <Border BorderBrush="Silver" BorderThickness="1" Grid.Column="1" Grid.RowSpan="5" Height="105" HorizontalAlignment="Left" Margin="59,13,0,0" Name="border1" VerticalAlignment="Top" Width="1" Visibility="Hidden" />
            <Button Content="Go" Grid.Column="4" Grid.Row="2" Height="20" HorizontalAlignment="Left" Margin="2,3,0,0" Name="btnGo" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="80" Visibility="Visible" TabIndex="10" Click="btnGo_Click" />
            <TextBox Height="25" HorizontalAlignment="Left" Name="txtWNstepN" VerticalAlignment="Top" Width="60" Grid.Column="1" Grid.Row="1" Visibility="Visible" TabIndex="6" LostFocus="txtWNstepN_LostFocus" />
            <TextBox Height="25" HorizontalAlignment="Left" Name="txtWNsteps" VerticalAlignment="Top" Width="60" Grid.Column="1" Grid.Row="3" Visibility="Visible" TabIndex="7" LostFocus="txtWNsteps_LostFocus" />
            <TextBox Height="25" HorizontalAlignment="Left" Name="txtRStep" VerticalAlignment="Top" Width="60" Grid.Column="3" Grid.Row="1" Visibility="Hidden" TabIndex="8" LostFocus="txtRStep_LostFocus" />
        </Grid>
        <Grid Grid.Row="3" Height="87" HorizontalAlignment="Left" Name="grid2" VerticalAlignment="Top" Width="504">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="46*" />
                <ColumnDefinition Width="458*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="35*" />
                <RowDefinition Height="35*" />
                <RowDefinition Height="13*" />
            </Grid.RowDefinitions>
            <Label Content="R" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="0,2,0,0" Name="label4" VerticalAlignment="Top" />
            <Label Content="E" Height="28" HorizontalAlignment="Left" Margin="0,2,0,0" Name="label5" VerticalAlignment="Top" Grid.Row="2" />
            <TextBox Grid.Column="1" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="4,4,0,0" Name="txtbxRadius" VerticalAlignment="Top" Width="450" TabIndex="3" />
            <TextBox Grid.Row="2" Height="28" HorizontalAlignment="Left" Margin="4,4,0,0" Name="txtbxPerm" VerticalAlignment="Top" Width="450" Grid.Column="1" TabIndex="4" />
        </Grid>
        <Label Content="Characteristics of layers (delimeted by ; ). Enter radiuses in absolute magnitude." Grid.Row="2" Height="32" HorizontalAlignment="Left" Margin="4,4,0,0" Name="label9" VerticalAlignment="Top" Width="496" />
    </Grid>
</Window>